def dockerUtils
def config
def slackNotifier
def deploymentUtils
def pipelineUtils
def testUtils
def envSetup

pipeline {
    agent any
    stages {
        stage('Load Utilities') {
            steps {
                script {
                    pipelineUtils = load "pipeline_utils.groovy"
                }
            }
        }

        stage('Prep work') {
            parallel {
                stage('Clean up folder') {
                    steps {
                        script {
                            pipelineUtils.cleanWorkspace()
                        }
                    }
                }
            }
        }
    }
}
