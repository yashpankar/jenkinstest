pipeline {
    agent any
    stages {
        stage('Load Utilities') {
            steps {
                script {
                    pipelineUtils = load "pipeline_utils.groovy"
                }
            }
        }

        stage('Prep work') {
            parallel {
                stage('Clean up folder') {
                    steps {
                        script {
                            echo ${pipelineUtils.SLACK_CHANNEL}
                        }
                    }
                }
            }
        }
    }
}
