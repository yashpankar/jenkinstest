pipeline {
    agent any

    stages {
        stage('List Files') {
            steps {
                script {
                    sh 'ls -R'
                }
            }
        }
        stage('Load and Hello') {
            steps {
                script {
                    // Load the Groovy script
                    def script = load './vars/helloworld.groovy'
                    
                    // Ensure the method is properly defined and call it
                    script()
                }
            }
        }
    }
}

