pipeline {
    agent any
    stages {
        stage('Load Utilities') {
            steps {
                script {
                    def configScript = load "pipeline_utils.groovy"
                }
            }
        }

        stage('Prep work') {
            parallel {
                stage('Clean up folder') {
                    steps {
                        script {
                    // Call the getConfig function
                    def config = configScript.getConfig()
                    
                    // Access configuration values
                    env.SLACK_CHANNEL = config.SLACK_CHANNEL

                    echo "Slack Channel: ${env.SLACK_CHANNEL}"
                        }
                    }
                }
            }
        }
    }
}
