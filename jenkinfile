def dockerUtils
def config
def slackNotifier
def deploymentUtils
def pipelineUtils
def testUtils
def envSetup

pipeline {
    agent {
        label 'docker-azcli-kubectl'
    }

    stages {
        stage('Load Utilities') {
            steps {
                script {
                    dockerUtils = load "docker_utils.groovy"
                    config = load "config.groovy"
                    slackNotifier = load "slack_notifier.groovy"
                    deploymentUtils = load "deployment_utils.groovy"
                    pipelineUtils = load "pipeline_utils.groovy"
                    testUtils = load "test_utils.groovy"
                    envSetup = load "env_setup.groovy"
                }
            }
        }

        stage('Prep work') {
            parallel {
                stage('Clean up folder') {
                    steps {
                        script {
                            pipelineUtils.cleanWorkspace()
                        }
                    }
                }
            }
        }
    }
}
